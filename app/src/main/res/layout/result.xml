<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bgfin"
              >
    <RelativeLayout android:id="@+id/RelativeLayout02"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android">
    <ListView android:id="@+id/listView" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:smoothScrollbar="true"

              android:scrollingCache="true" android:layout_alignParentTop="true" android:layout_marginTop="41dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" android:layout_gravity="left|center_vertical" android:singleLine="false"
                android:layout_alignLeft="@+id/listView" android:layout_alignParentTop="true"
                android:textColor="#ffffff" android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:textSize="25dp" />
    </RelativeLayout>
    <ProgressBar
                android:indeterminateDrawable="@drawable/my_progress_indeterminate" android:layout_height="100dp" android:layout_width="100dp"
                android:layout_gravity="center"
                android:id="@+id/progressBar"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:layout_marginTop="11dp"/>

</LinearLayout>